<?xml version="1.0" encoding="UTF-8"?>
<Layout>
  <!-- Stili -->
  <Style selector=".title">
    font-size: 24;
    font-weight: bold;
    text-align: center;
    color: #2c3e50;
  </Style>

  <Style selector=".subtitle">
    font-size: 14;
    text-align: center;
    color: #7f8c8d;
  </Style>

  <Style selector=".btn-primary">
    background-color: #3498db;
  </Style>

  <!-- Layout -->
  <VBox style="padding: 20;">
    <!-- Header -->
    <Text class="title">Benvenuto in Fylay!</Text>
    <Text class="subtitle">La tua prima applicazione con layout XML</Text>

    <Rectangle style="background-color: #bdc3c7; height: 2; margin: 20;" />

    <!-- Form -->
    <VBox>
      <Label style="font-weight: bold; margin-bottom: 5;">Il tuo nome:</Label>
      <Entry id="nameInput" placeholder="Inserisci il tuo nome" />

      <Spacer />

      <Button id="greetBtn" class="btn-primary">Salutami!</Button>
    </VBox>

    <Spacer />

    <!-- Footer -->
    <Label style="text-align: center; font-size: 10; color: #95a5a6;">
      Creato con Fylay ❤️
    </Label>
  </VBox>
</Layout>